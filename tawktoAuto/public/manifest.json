{
  "manifest_version": 3,
  "name": "Tawk.to Auto Reply",
  "description": "Automação do chat Tawk.to - Desenvolvido por José Carlos Nowazeski Filho",
  "version": "1.0",
  "author": "José Carlos Nowazeski Filho",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://dashboard.tawk.to/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}