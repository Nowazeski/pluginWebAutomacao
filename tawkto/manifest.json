{
  "manifest_version": 3,
  "name": "Tawk Auto",
  "version": "2.0",
  "description": "Automatiza respostas no Tawk.to com controle de aparencia do botao",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_title": "Auto Tawk",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://dashboard.tawk.to/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
