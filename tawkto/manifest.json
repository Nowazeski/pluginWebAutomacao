{
  "manifest_version": 3,
  "name": "Tawk Auto",
  "version": "3.0",
  "description": "Automatiza respostas no Tawk.to com botoes sincronizados",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://dashboard.tawk.to/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
